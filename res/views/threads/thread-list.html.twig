{% for thread in threads %}
    <div class="thread-item {% if not thread.isRead %}unread{% endif %} {% if thread.votes < -1 %}unpopular{% endif %}">
        <div class="vote-actions">
            <a class="vote-action upvote {{ (thread.userVote == 1) ? 'active' }}" href="#" data-email-id="{{ thread.number }}">
                <i class="fa fa-chevron-up"> </i>
            </a>
            <div class="vote vote-value {% if thread.votes == 0 %}neutral{% endif %}">{{ thread.votes }}</div>
            <a class="vote-action downvote {{ (thread.userVote == -1) ? 'active' }}" href="#" data-email-id="{{ thread.number }}">
                <i class="fa fa-chevron-down"> </i>
            </a>
        </div>
        <a class="thread-subject" href="message/{{ thread.number }}">{{ thread.subject }}</a>
        <div class="thread-info">
            <span>
                <i class="fa fa-clock-o"></i>
                {{ thread.date|time_diff }}
            </span>
            {% if thread.fromName %}
                <span>
                    <i class="fa fa-user"></i>
                    {{ thread.fromName }}
                </span>
            {% endif %}
            {% if thread.emailCount > 1 %}
                <span>
                    <i class="fa fa-comment-o"></i>
                    {{ thread.emailCount - 1 }} response{% if thread.emailCount > 2 %}s{% endif %}
                </span>
            {% endif %}
        </div>
    </div>
{% endfor %}
